    <RelativeLayout
        android:id="@+id/test_align_layout"
        android:layout_width="412dp"
        android:layout_height="731dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/test_align"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:visibility="invisible"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/ok_align"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ok_align"
            android:text="OK"
            android:visibility="invisible" />


        <Button
            android:id="@+id/realign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:onClick="again_align"
            android:text="Realign"
            android:visibility="invisible" />


    </RelativeLayout>

    <Button
        android:id="@+id/oneByOne_button"
        android:layout_width="236dp"
        android:layout_height="55dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="62dp"
        android:onClick="oneByOne"
        android:text="One by One"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/series_button"
        android:layout_width="236dp"
        android:layout_height="55dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="146dp"
        android:onClick="series"
